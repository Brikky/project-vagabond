<h1>Change Your Path</h1>

<%= form_for current_user do |f|%>
<div>
    <label for="name">Name: </label><%= f.text_field :name, placeholder: 'name'%>
</div>
<div>
    <label for="profile_photo">Profile Photo: </label><%= f.text_field :profile_photo, placeholder: 'profile photo url' %>
</div>
<div>
    <label for="current_city">Current City: </label><%= f.collection_select :current_city, City.all, :name, :name%>
    <%= link_to 'Add New City', new_city_path %>
</div>

<%= f.submit 'Change'%>
<% end %>
