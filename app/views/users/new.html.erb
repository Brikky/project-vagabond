<h1>Become a Vagabond</h1>
<%= form_for @user, url: '/users' do |f|%>
<div>
    <%= f.text_field :name, placeholder: 'name'%>
</div>
<div>
    <%= f.text_field :profile_photo, placeholder: 'profile photo url' %>
</div>
<div>
    <%= f.collection_select :current_city, City.all, :name, :name%>
    <%= link_to 'Add New City', new_city_path %>
</div>
<div>
    <%= f.email_field :email, placeholder: 'email' %>
</div>
<div>
    <%= f.password_field :password, placeholder: 'password' %>
</div>
<div>
    <%= f.password_field :password_confirm, placeholder: 'confirm password' %>
</div>

<%= f.submit 'Join'%>
<% end %>
