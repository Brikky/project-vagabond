
    <div class='columns large-3 large-offset-1 show-for-large'>
        <img src="http://i.imgur.com/rIKF2Ga.png" class="phone-image" alt="Vagabond Tales for iPhone">
    </div>
    <div class='inline large-4 columns large-offset-1 end'>
        <h3>Login</h3>
        <%= form_tag '/login' do %>
        <div>
            <label for="email" hidden></label><%= text_field_tag :email, nil, placeholder: 'email' %>
            <label for="password" hidden></label><%= password_field_tag :password, nil, placeholder: 'password' %>
        </div>
        <%= submit_tag 'Login', class: 'button'%>
        <h3>Or Join</h3>
    <% end %>
    <%= render 'users/new' %>
      </div>
