<h1>Welcome to the Campfire</h1>
<h3>Share some stories</h3>
<% if current_user %>
<%= link_to 'tell your own', new_user_post_path(current_user) %>
<% else %>
<%= link_to 'tell your own', login_path %>
<% end %>

<% @posts.each do |post| %>
<div>
  <%=image_tag post.photo, height: '75'%> <h3><%= link_to post.title, request.env['PATH_INFO']+"/#{post.id}"  %></h3><br>
  <%= post.text_body %>
</div>
<%end%>
