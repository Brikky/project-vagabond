<h1>Welcome to Vagabond Tales</h1>
<div class="personal-info">
  <%= image_tag @post.photo, height: '100' %>
  <h3><%= @post.title %></h3>
  <h5>Written From: <%= link_to @post.city.name, city_path(@post.city) %></h5>
  <h5>Author: <%= link_to @user.name, user_path%></h5>
  <div>
    <%= @post.text_body %>
  </div>
  <div>
    <%= link_to 'Revise', edit_user_post_path(@user, @post)%>
    <%= button_to 'Repress memory', user_post_path(@user, @post), method: :delete, data: {confirm: "Are you sure you want to delete #{@post.title}"}%>
  </div>
</div>
